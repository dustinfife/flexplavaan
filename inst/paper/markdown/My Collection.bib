doi = {10.1080/00223891.2017.1281286},
file = {:Users/fife/Library/Application Support/Mendeley Desktop/Downloaded/McNeish, An, Hancock - 2018 - The Thorny Relation Between Measurement Quality and Fit Index Cutoffs in Latent Variable Models.pdf:pdf},
