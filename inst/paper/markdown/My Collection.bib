author = {Kang, Ruiying and Wu, Yeqing and Li, Zhiwu and Jiang, Jun and Gao, Qi and Yu, Yuncui and Gao, Keming and Yan, Yuxiang and He, Yan},
doi = {10.1159/000448195},
issn = {0254-4962; 1423-033X},
journal = {Psychopathology},
